42 PRINT "DARE YOU FETCH YOUR SPEAR? (Y OR N)"
43 INPUT A$
44 IF A$="Y" THEN 48
45 IF A$<>"N" THEN 42
46 GOSUB 57
47 GOTO 33
48 IF (D = T) THEN 55
49 PRINT "YOU MADE IT!"
50 GOTO 27
51 PRINT "A*A*R*R*R*G*G*H*H!   Y*O*U G*O*T M*E*!"
53 PRINT "ALL HAIL!!!"
54 END
55 PRINT "G*O*T*C*H*A!   M*U*N*C*H! M*U*N*C*H! M*U*N*C*H!"
56 END
57 PRINT ""
58 PRINT "IT IS";H;
59 IF (M=0) THEN 62
60 PRINT ":";M
61 GOTO 64
62 PRINT "OCLOCK"
63 IF (H=8) THEN 55
64 M = M + 15
65 IF M <> 60 THEN 68
66 H = H + 1
67 M = 0
68 RETURN
